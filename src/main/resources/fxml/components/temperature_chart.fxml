<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nhom.weatherdesktop.controller.TemperatureChartController"
      styleClass="weather-card" 
      spacing="16">
    
    <!-- Card Title -->
    <Text text="Temperature Trend (24h)" styleClass="card-title"/>
    
    <!-- Line Chart -->
    <LineChart fx:id="temperatureChart" 
               legendVisible="false"
               prefHeight="300"
               animated="false">
        <xAxis>
            <CategoryAxis label="Time" side="BOTTOM"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Temperature (Â°C)" side="LEFT"/>
        </yAxis>
    </LineChart>
    
</VBox>
