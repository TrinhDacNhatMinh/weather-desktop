<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane styleClass="login-root" stylesheets="@../../styles/base.css, @../../styles/components.css, @../../styles/pages/login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nhom.weatherdesktop.controller.LoginController">
    
    <!-- Background with gradient -->
    <Pane styleClass="bg-gradient-pastel" />
    
    <!-- Login Card Container -->
    <VBox alignment="CENTER" maxHeight="580" maxWidth="420" styleClass="card-glass">
        
        <!-- App Logo/Title Section -->
        <VBox alignment="CENTER" spacing="8">
            <ImageView fitHeight="64" fitWidth="64" preserveRatio="true">
                <image>
                    <Image url="@../../icons/logos/partly_cloudy_day.png" />
                </image>
            </ImageView>
            <Text styleClass="h1" text="Weather Desktop" />
            <Text styleClass="body text-secondary" text="Sign in to continue" />
            <VBox.margin>
                <Insets bottom="32" />
            </VBox.margin>
        </VBox>
        
        <!-- Input Fields Section -->
        <VBox spacing="16">
            <!-- Username Field -->
            <VBox spacing="6">
                <Label styleClass="label-primary" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-modern" />
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="6">
                <Label styleClass="label-primary" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="input-modern" />
            </VBox>
            
            <!-- Remember Me & Forgot Password Row -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="rememberMeCheckbox" styleClass="checkbox-modern" text="Remember me" />
                <Region HBox.hgrow="ALWAYS" />
                <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" styleClass="link-accent" text="Forgot password?" />
            </HBox>
            
            <VBox.margin>
                <Insets bottom="8" />
            </VBox.margin>
        </VBox>
        
        <!-- Login Button -->
        <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" styleClass="btn-primary" text="Sign In">
            <VBox.margin>
                <Insets bottom="16" top="8" />
            </VBox.margin>
        </Button>
        
        <!-- "or" text centered -->
        <Text styleClass="divider-text" text="or">
            <VBox.margin>
                <Insets bottom="8" top="8" />
            </VBox.margin>
        </Text>
        
        <!-- Sign Up Button -->
        <Button fx:id="signUpButton" maxWidth="Infinity" onAction="#handleSignUp" styleClass="btn-secondary" text="Sign Up">
            <VBox.margin>
                <Insets top="8" />
            </VBox.margin>
        </Button>
    </VBox>
    
</StackPane>
