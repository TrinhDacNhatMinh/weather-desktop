<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17.0.6" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nhom.weatherdesktop.controller.SidebarController"
      styleClass="sidebar">
    
    <!-- My Station Button -->
    <Button styleClass="sidebar-btn, active" fx:id="myStationBtn" onAction="#handleMyStation">
        <graphic>
            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                <image>
                    <Image url="@../../icons/sidebar/home.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    
    <!-- Alerts Button -->
    <Button styleClass="sidebar-btn" fx:id="alertsBtn" onAction="#handleAlerts">
        <graphic>
            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                <image>
                    <Image url="@../../icons/sidebar/notifications.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    
    <!-- Settings Button -->
    <Button styleClass="sidebar-btn" fx:id="settingsBtn" onAction="#handleSettings">
        <graphic>
            <ImageView fitWidth="24" fitHeight="24" preserveRatio="true">
                <image>
                    <Image url="@../../icons/sidebar/settings.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    
</VBox>
