<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx/17.0.6" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.nhom.weatherdesktop.controller.TopBarController"
      styleClass="top-bar" 
      alignment="CENTER_LEFT" 
      spacing="24">
    
    <!-- Page Title -->
    <Text fx:id="pageTitle" text="My Station" styleClass="page-title"/>
    
    <!-- Spacer -->
    <Region HBox.hgrow="ALWAYS"/>
    
    <!-- Action Icons -->
    <Button styleClass="icon-btn" fx:id="searchBtn">
        <graphic>
            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                <image>
                    <Image url="@../../icons/topbar/search.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    
    <Button styleClass="icon-btn" fx:id="profileBtn">
        <graphic>
            <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                <image>
                    <Image url="@../../icons/topbar/profile.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>
    
</HBox>
