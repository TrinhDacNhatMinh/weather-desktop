<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/17.0.6" 
           xmlns:fx="http://javafx.com/fxml/1"
           prefHeight="600.0" prefWidth="800.0"
           style="-fx-background-color: #f5f5f5;">
    
    <!-- Centered content -->
    <VBox alignment="CENTER" spacing="20">
        <Text text="Welcome to Weather Desktop!" 
              style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #0067C0;" />
        
        <Text text="Dashboard coming soon..." 
              style="-fx-font-size: 16px; -fx-fill: #666666;" />
    </VBox>
    
</StackPane>
